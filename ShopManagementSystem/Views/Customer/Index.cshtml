<div class="container">
    <div class="col" data-bind="with:newCustomer">
        <div class=" col-4">
            <label>Customer Name</label>
            <input type="text" class="form-control" data-bind="value: name" />
        </div>
        <div class=" col-4">
            <label>Contact No</label>
            <input type="text" class="form-control" data-bind="value: contactNo" />
        </div>
        <div class=" col-4">
            <label>Address</label>
            <input type="text" class="form-control" data-bind="value: address" />
        </div>
        <div class="col-4">
            <button type="submit" class="btn btn-primary" data-bind="click: $root.addCustomer">Add Customer</button>

        </div>


    </div>

</div>
<hr/>
<table class="table table-striped">
    <thead>
        <tr>
            <th>SN</th>
            <th>Customer Name</th>
            <th>Contact No.</th>
            <th>Address</th>
        <tr>
    </thead>
    <tbody data-bind="foreach:allCustomers">
        <tr>
            <td data-bind=" text : $index() + 1"></td>
            <td data-bind="text:name"></td>
            <td data-bind="text:contactNo"></td>
            <td data-bind="text:address"></td>
            <td>
                <button class="btn btn-primary" data-bind="click:$root.Update">Edit</button>
                <button class="btn btn-danger" data-bind="click:$root.delete">Delete</button>

            </td>
        </tr>
    </tbody>
</table>
@section Scripts {

    <script src="~/js/knockout3.5.1.js"></script>
    <script src="~/js/app/customer/customer.controller.js"></script>
    <script src="~/js/app/customer/customer.model.js"></script>
    <script>
        var obj = new CustomerController();
        ko.applyBindings(obj);
</script>
}










    