<div class="row">
    <div class="col-md-6 col-sm-12 col-6 offset-3" data-bind="with: newItem">
        <div class="form-group">
            <label class="form-label">Name</label>
            <input data-bind="value: name" class="form-control" type="text" />
        </div>
        <div class="form-group">
            <label class="form-label">Price</label>
            <input data-bind="value: price" class="form-control" type="text" />
        </div>
        <div class="form-group">
            <label class="form-label">Discount</label>
            <input data-bind="value: discount" class="form-control" type="text" />
        </div>
        <div class="form-group">
            <label class="form-label">Stock</label>
            <input data-bind="value: stock" class="form-control" type="text" />
        </div>
        <div class="text-center mt-2">
            <a class="btn btn-success" data-bind="click: $root.AddItem">Submit</a>
        </div>
    </div>
</div>

<hr />

<div class="container">
    <div class="row">
        <table class="table table-border">
            <thead>
                <tr>
                    <th>S.No</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Discount</th>
                    <th>Stock</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: allItems">
                <tr>
                    <td data-bind="text: $index() + 1"></td>
                    <td data-bind="text: name"></td>
                    <td data-bind="text: price"></td>
                    <td data-bind="text: discount"></td>
                    <td data-bind="text: stock"></td>
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-danger" data-bind="click: $root.DeleteItem">DELETE</button>
                            <button class="btn btn-danger" data-bind="click: $root.selectItem">UPDATE</button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/knockout.js"></script>
    <script src="~/js/app/item.model.js"></script>
    <script src="~/js/app/item.controller.js"></script>
    <script>
        var obj = new itemController();
        ko.applyBindings(obj);
    </script>
}
